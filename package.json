{
  "name": "trap-registration",
  "version": "0.0.2",
  "description": "Register to use traps under General Licences",
  "author": "Mike Coats <mike.coats@nature.scot>",
  "repository": "github:Scottish-Natural-Heritage/trap-registration",
  "license": "(MIT OR OGL-UK-3.0 OR Apache-2.0)",
  "type": "module",
  "scripts": {
    "prescss": "node --experimental-modules src/env-scss.js",
    "scss": "node-sass --importer node_modules/node-sass-package-importer/dist/cli.js -o dist build/main.scss",
    "lint": "xo",
    "assets": "cp node_modules/naturescot-frontend/naturescot/assets/images/naturescot-logo.png dist/ && cp -R src/assets/* dist/",
    "build": "npm run lint && npm run scss && npm run assets",
    "prestart": "npm run build",
    "start": "node --experimental-modules src/server.js",
    "dev": "nodemon --exec \"npm run start\" -e js,njk,scss"
  },
  "engines": {
    "node": "12.14.1",
    "npm": "6.13.4"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "govuk-frontend": "^3.4.0",
    "memorystore": "^1.6.1",
    "morgan": "^1.9.1",
    "naturescot-frontend": "^1.0.0",
    "node-sass": "^4.13.0",
    "node-sass-package-importer": "^5.3.2",
    "notifications-node-client": "^4.7.0",
    "nunjucks": "^3.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "xo": "^0.25.3"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "parser": "babel-eslint",
    "rules": {
      "import/extensions": 0,
      "new-cap": 0
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSpacing": false
  }
}
